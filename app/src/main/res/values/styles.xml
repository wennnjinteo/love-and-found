<?xml version="1.0" encoding="utf-8"?>
<resources>

        <!-- Base application theme. -->
        <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
            <!-- Customize your theme here. -->
        </style>

        <!-- Style for rounded ShapeableImageView. -->
        <style name="RoundedImageView" parent="">
            <item name="shapeAppearance">@style/RoundedImageView.ShapeAppearance</item>
            <item name="shapeAppearanceOverlay">@style/RoundedImageView.ShapeAppearanceOverlay</item>
        </style>

        <style name="RoundedImageView.ShapeAppearance" parent="ShapeAppearance.MaterialComponents.MediumComponent">
            <item name="cornerSize">16dp</item>
        </style>

        <!-- If you want to apply the corner radius to just one corner or different corners, you can do this -->
        <style name="RoundedImageView.ShapeAppearanceOverlay" parent="">
            <item name="cornerSizeTopRight">16dp</item>
            <item name="cornerSizeBottomRight">16dp</item>
            <item name="cornerSizeTopLeft">16dp</item>
            <item name="cornerSizeBottomLeft">16dp</item>
        </style>

</resources>